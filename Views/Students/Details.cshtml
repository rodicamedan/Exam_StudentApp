    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodStud)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodStud)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prenume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prenume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataNasterii)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataNasterii)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CNP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CNP)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cursuri)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Customer</th>
                    <th>Curs</th>
                </tr>
                @foreach (var item in Model.Cursuri)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Profesor.Prenume)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Denumire)
                        </td>
                    </tr>
                }
            </table>
